@model List<KidKinder.Entities.Gallery>

@{
    ViewBag.Title = "GalleryList";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="pcoded-inner-content">
    <div class="main-body">
        <div class="page-wrapper">
            <div class="page-body">
                <div class="card">
                    <div class="card-header">
                        <h5>Görsel Listesi Tablosu</h5>
                        <span>Görseller ile ilgili işlemleri yapabileceğiniz alandır.</span>
                        <div class="card-header-right">
                            <ul class="list-unstyled card-option">
                                <li><i class="fa fa fa-wrench open-card-option"></i></li>
                                <li><i class="fa fa-window-maximize full-card"></i></li>
                                <li><i class="fa fa-minus minimize-card"></i></li>
                                <li><i class="fa fa-refresh reload-card"></i></li>
                                <li><i class="fa fa-trash close-card"></i></li>
                            </ul>
                        </div>
                    </div>
                    <div class="card-block table-border-style">
                        <div class="table-responsive">
                            <table class="table">
                                <thead>
                                    <tr>
                                        <th>#</th>
                                        <th>Görsel</th>
                                        <th>Status</th>
                                        <th>Sil</th>
                                        <th>Güncelle</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <td>@item.GalleryId</td>
                                            <td><img src="@item.ImageUrl" alt="user image" class="img-square img-100"</td>
                                            

                                            @if (item.IsTrue)
                                            {
                                                <td><a href="/AdminGallery/Passive/@item.GalleryId" class="btn btn-outline-danger">Pasif Yap</a></td>
                                            }
                                            else if (!item.IsTrue)
                                            {
                                                <td><a href="/AdminGallery/Active/@item.GalleryId" class="btn btn-outline-success">Aktif Yap</a></td>
                                            }
                                            <td><a href="/AdminGallery/DeleteGallery/@item.GalleryId" class="btn btn-danger">Sil</a></td>
                                            <td><a href="/AdminGallery/UpdateGallery/@item.GalleryId" class="btn btn-success">Güncelle</a></td>

                                        </tr>
                                    }
                                </tbody>
                            </table>
                            <a href="/AdminGallery/CreateGallery/" class="btn btn-primary">Yeni Görsel Oluştur</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


