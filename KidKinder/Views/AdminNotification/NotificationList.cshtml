@model List<KidKinder.Entities.Notification>

@{
    ViewBag.Title = "NotificationList";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="pcoded-inner-content">
    <div class="main-body">
        <div class="page-wrapper">
            <div class="page-body">
                <div class="card">
                    <div class="card-header">
                        <h5>Bildirimler Listesi</h5>
                        <span>Bildirimler ile ilgili işlemleri yapabileceğiniz alandır.</span>
                        <div class="card-header-right">
                            <ul class="list-unstyled card-option">
                                <li><i class="fa fa fa-wrench open-card-option"></i></li>
                                <li><i class="fa fa-window-maximize full-card"></i></li>
                                <li><i class="fa fa-minus minimize-card"></i></li>
                                <li><i class="fa fa-refresh reload-card"></i></li>
                                <li><i class="fa fa-trash close-card"></i></li>
                            </ul>
                        </div>
                    </div>
                    <div class="card-block table-border-style">
                        <div class="table-responsive">
                            <table class="table">
                                <thead>
                                    <tr>
                                        <th>Adı Soyadı</th>
                                        <th>Açıklama</th>
                                        <th>Tarih</th>
                                        <th>Görsel</th>
                                        <th>Sil</th>
                                        <th>Güncelle</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <td>@item.Title</td>
                                            <td>@item.Description</td>
                                            <td>@item.NotificationDate</td>
                                            <td>@item.ImageUrl</td>
                                            <td><a href="/AdminNotification/DeleteNotification/@item.NotificationId" class="btn btn-danger">Sil</a></td>
                                            <td><a href="/AdminNotification/UpdateNotification/@item.NotificationId" class="btn btn-success">Güncelle</a></td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                            <a href="/AdminNotification/CreateNotification/" class="btn btn-primary">Yeni Bildirim Oluştur</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

