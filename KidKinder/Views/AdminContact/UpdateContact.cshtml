@model KidKinder.Entities.Contact

@{
    ViewBag.Title = "UpdateContact";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="pcoded-inner-content">
    <div class="main-body">
        <div class="page-wrapper">
            <div class="page-body">
                <div class="row">
                    <div class="col-sm-12">>
                        <div class="card">
                            <div class="card-header">
                                <h5>Yeni İletişim Girişi</h5>
                                <span>İletişim ile ilgili verileri eksiksiz olarak doldurunuz.</span>
                            </div>
                            <div class="card-block">
                                <form method="post">
                                    <div class="form-group row">
                                        <label class="col-sm-2 col-form-label">İletişim Id</label>
                                        <div class="col-sm-10">
                                            @Html.TextBoxFor(x => x.ContactId, new { @class = "form-control" })
                                        </div>
                                    </div>
                                    <div class="form-group row">
                                        <label class="col-sm-2 col-form-label">Ad Soyad</label>
                                        <div class="col-sm-10">
                                            @Html.TextBoxFor(x => x.NameSurname, new { @class = "form-control" })
                                        </div>
                                    </div>
                                    <div class="form-group row">
                                        <label class="col-sm-2 col-form-label">E Mail</label>
                                        <div class="col-sm-10">
                                            @Html.TextBoxFor(x => x.Email, new { @class = " form-control" })
                                        </div>
                                    </div>
                                    <div class="form-group row">
                                        <label class="col-sm-2 col-form-label">Konu</label>
                                        <div class="col-sm-10">
                                            @Html.TextBoxFor(x => x.Subject, new { @class = "form-control" })
                                        </div>
                                    </div>
                                    <div class="form-group row">
                                        <label class="col-sm-2 col-form-label">İçerik</label>
                                        <div class="col-sm-10">
                                            @Html.TextBoxFor(x => x.Message, new { @class = "form-control" })
                                        </div>
                                    </div>
                                    <div class="form-group row">
                                        <label class="col-sm-2 col-form-label">Tarih</label>
                                        <div class="col-sm-10">
                                            @Html.TextBoxFor(x => x.SendDate, new { @class = "form-control" })
                                        </div>
                                    </div>
                                    <div class="form-group row">
                                        <label class="col-sm-2 col-form-label">Onayla</label>
                                        <div class="col-sm-10">
                                            @Html.TextBoxFor(x => x.IsRead, new { @class = "form-control" })
                                        </div>
                                    </div>
                                    <button class="btn btn-warning">İletişim Bilgilerini Güncelle</button>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
